# Configurazione Ollama (AI locale gratuita)
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.2:1b

# Configurazione Whisper (Speech-to-Text locale)
WHISPER_MODEL=base

# Configurazione Audio - IMPORTANTE: Imposta il microfono migliore
# Dal tuo output, i microfoni consigliati sono:
# Indice 1: Microphone (Realtek(R) Audio) - 2 canali ✅ CONSIGLIATO
# Indice 22: Gruppo microfoni (Realtek HD Audio Mic input) - 2 canali
MICROPHONE_INDEX=1

# Debug - Abilita log dettagliati
DEBUG=True

# Configurazioni avanzate (opzionali)
# SAVE_AUDIO_RECORDINGS=False  # Salva registrazioni per debug
# WHISPER_MODEL=small          # Modello più accurato (richiede più RAM)
# TTS_RATE=200                 # Velocità voce più alta